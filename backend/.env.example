# Backend Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Application Settings
APP_NAME=CodeQuest
APP_VERSION=1.0.0
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
MONGODB_URL=mongodb://localhost:27017/codequest
DATABASE_NAME=codequest

# JWT Settings
SECRET_KEY=your-super-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# GitHub Integration
GITHUB_TOKEN=your-github-token
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/v1/auth/github/callback

# Google Gemini AI - UPDATE WITH WORKING API KEY
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite
GEMINI_MAX_TOKENS=1000
GEMINI_TEMPERATURE=0.7

# Firebase Configuration
# Option 1: Service Account Key File Path (recommended for production)
FIREBASE_SERVICE_ACCOUNT_PATH=path/to/your/service-account-key.json

# Option 2: Service Account Key as JSON String (for environment variables)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"gamified-oss","private_key_id":"..."}

# Firebase Project Settings (these should match your Firebase console settings)
FIREBASE_PROJECT_ID=gamified-oss
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=gamified-oss.firebaseapp.com
FIREBASE_STORAGE_BUCKET=gamified-oss.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=189137801621
FIREBASE_APP_ID=1:189137801621:web:d73bba21c289e8522ca69c

# CORS Settings
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000", "http://localhost:8000"]